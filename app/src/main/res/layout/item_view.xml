<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >
    <ImageView
        android:id="@+id/main_item_background"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/tealA200"


        />
    <ImageButton
        android:id="@+id/main_item_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:visibility="visible"
        android:background="@color/tealA200"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginHorizontal="9dp"
        android:layout_marginVertical="10dp"

        >


        <TextView

            android:id="@+id/main_place_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Place: 00"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/main_score_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/main_place_view"

            android:text="score:000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"


            />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_text_data"

                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/main_score_view"

                android:text="date:"
                android:textColor="@color/black"

                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/text_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/main_text_data"

                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:layout_weight="3"

                android:text="08/07/2024 13:39"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"


                />




    </RelativeLayout>

</RelativeLayout>